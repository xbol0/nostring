# You can configure your instance by setup following envs

############################
# General
############################

# Port to serve
# Defaults 9000
PORT=9000

# Relay name
RELAY_NAME=

# Relay description
RELAY_DESC=

# Admin pubkey
# Hex encoding
ADMIN_PUBKEY=

# Admin contact
ADMIN_CONTACT=

# Relay countries
RELAY_COUNTRIES=CA,US,CN,JP

# Relay BOT private key
# Hex encoding
RELAY_BOT_KEY=

############################
# Limitations
############################

# Max message length
LIMIT_MAX_MESSAGE_LENGTH=2000000

############################
# Strategies
############################

# NIPs
NIPS=1,2,3,4

# Event retention
EVENT_RETENTION=[{"kinds":[0,1],"time":3600}]

# Event created_at range
# NIP-22
EVENT_TIEMSTAMP_RANGE=-3600~100

# Broadcast relays
BROADCAST_RELAYS=wss://relay.damus.io,wss://relay.nostr.band

# Whitelist
# In hex encoding
WHITELIST_PUBKEYS=123123123,123123123

############################
# Preferences
############################

# Language tags
LANGUAGE_TAGS=en,en-419

# Tags
TAGS=nsfw,sfw-only,anime,geek

# Posting policy
POSTING_POLICY=https://example.com/

############################
# Payment settings
############################

# FEES_ADMISSION
FEES_ADMISSION=1000msats

# FEES_SUBSCRIPTION
FEES_SUBSCRIPTION=200sats/2592000

# FEES_PUBLICATION
FEES_PUBLICATION=1,2,3:300msats;4,5,6:100msats
